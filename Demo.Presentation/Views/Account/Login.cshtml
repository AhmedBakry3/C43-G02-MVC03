@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-w3layouts wrapper">
    <h1>SecureDashboard</h1>
    <div class="main-agileinfo">
        <div class="agileits-top">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="All"></div>

                <input asp-for="Email" placeholder="Email" required="">
                <span asp-validation-for="Email"></span>
                <br />
                <input asp-for="Password" placeholder="Password" required="">
                <span asp-validation-for="Password"></span>
                <br />

                <div class="wthree-text">
                    <label class="anim">
                        <input asp-for="RememberMe" class="checkbox">
                        <span>Remember Me</span>
                    </label>
                    <div class="clear"> </div>
                </div>
                <input type="submit" value="SIGNIN">

                <div class="container min-vh-100 d-flex align-items-center justify-content-center">
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="text-center">
                            <a asp-action="GoogleLogin"
                               class="btn btn-light border border-dark-subtle rounded-pill d-flex align-items-center justify-content-center gap-2 py-2 w-100">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
                                    <path fill="#4285F4" d="M17.6 9.2c0-.6-.1-1.2-.2-1.8H9v3.4h4.8c-.3 1.8-1.7 3.2-3.7 3.2-2.1 0-3.8-1.7-3.8-3.8s1.7-3.8 3.8-3.8c1 0 1.9.4 2.6 1.1L15 4.7c-1.3-1.2-3-1.9-4.9-1.9-4.1 0-7.5 3.4-7.5 7.5s3.4 7.5 7.5 7.5c4.1 0 7.5-3.4 7.5-7.5z" />
                                </svg>
                                <span>Log in with Google</span>
                            </a>
                        </div>
                    </div>
                </div>
            </form>
            <br/>
            <p>Don't have an Account? <a asp-action="Register"> Register Now!</a></p>
            <br />
            <p><a asp-action="ForgetPassword">Forget Password!</a></p>

    </div>

            