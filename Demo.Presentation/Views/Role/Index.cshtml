@model IEnumerable<RoleDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>All Roles</h1>
<br />
<br />
<a class="btn btn-primary" asp-controller="Role" asp-action="Create">Create Roles</a>
<br />


<div class="m-2">
    <form asp-action="index" class="row offset-2" method="get">
        <div class="col-8">
            <input class="form-control" type="text" name="RoleSearchName" placeholder="Search For Role By Name" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-outline-success" value="Search" />

        </div>
    </form>

</div>

</div>

@if (Model.Any())
{
    <table class="table table-striped table-hover mt-3">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(R => R.Id)</th>
                <th>@Html.DisplayNameFor(R => R.RoleName)</th>
                <th>Details </th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>

                    <td> <a class="btn btn-primary" asp-action="Details" asp-route-Id="@Role.Id"> <i class="fas fa-eye"></i> Details</a> </td>
                    <td> <a class="btn btn-primary" asp-action="Edit" asp-route-Id="@Role.Id"> <i class="fas fa-edit"></i> Update</a> </td>
                    <td> <a class="btn btn-primary" asp-action="Delete" asp-route-Id="@Role.Id"> <i class="fas fa-trash-alt"></i> Delete</a> </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h2>No Roles Found !!</h2>
    </div>
}

