@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-w3layouts wrapper">
    <h1>Creative SignUp Form</h1>
    <div class="main-agileinfo">
        <div class="agileits-top">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="All"></div>

                <input asp-for="Email" placeholder="Email" required="">
                <span asp-validation-for="Email"></span>
                <br />
                <input asp-for="Password" placeholder="Password" required="">
                <span asp-validation-for="Password"></span>
                <br />

                <div class="wthree-text">
                    <label class="anim">
                        <input asp-for="RememberMe" class="checkbox">
                        <span>Remember Me</span>
                    </label>
                    <div class="clear"> </div>
                </div>
                <input type="submit" value="SIGNIN">
            </form>
            <p>Don't have an Account? <a asp-action="Register"> Register Now!</a></p>
            <br />
            <p><a asp-action="ForgetPassword">Forget Password!</a></p>

        </div>
    </div>

