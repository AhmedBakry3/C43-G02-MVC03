@model IEnumerable<UserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>All Users</h1>
<br />
<br />


<div class="m-2">
    <form asp-action="index" class="row offset-2" method="get">
        <div class="col-8">
            <input class="form-control" type="text" name="UserSearchName" placeholder="Search For User By Name" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-outline-success" value="Search" />

        </div>
    </form>

</div>

@if (Model.Any())
{
    <table class="table table-striped table-hover mt-3">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(U => U.Id)</th>
                <th>@Html.DisplayNameFor(U => U.Fname)</th>
                <th>@Html.DisplayNameFor(U => U.Lname)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(U => U.Roles)</th>
                <th>Details </th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.Fname</td>
                    <td>@User.Lname</td>
                    <td>@User.Email</td>
                    <td>@User.PhoneNumber</td>

                    <td>@(string.IsNullOrEmpty(User.Roles) ? "No Role" : User.Roles)</td>

                    <td> <a class="btn btn-primary" asp-action="Details" asp-route-Id="@User.Id"> <i class="fas fa-eye"></i> Details</a> </td>
                    <td> <a class="btn btn-primary" asp-action="Edit" asp-route-Id="@User.Id"> <i class="fas fa-edit"></i> Update</a> </td>
                    <td> <a class="btn btn-primary" asp-action="Delete" asp-route-Id="@User.Id"> <i class="fas fa-trash-alt"></i> Delete</a> </td>


                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h2>No Users Found !!</h2>
    </div>
}

