@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
}

<h1 class="my-3">All Departments</h1>

<a class="btn btn-primary my-3" asp-controller="Departments" asp-action="Create"> Create Department</a>
<br/>
@if(Model.Any())
{
    <table class="table table-striped table-hover mt-2">
        <thead class="text-center">
           <tr> 
               <th>@Html.DisplayNameFor(D=>D.Code)</th>
               <th>@Html.DisplayNameFor(D => D.Name)</th>
               <th>@Html.DisplayNameFor(D=>D.Description)</th>
               <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
          </tr>
        </thead>

        <tbody class="text-center">
         @foreach(var Departments in Model)
         {
                <tr>
                    <td>@Departments.Code</td>
                    <td>@Departments.Name</td>
                    <td>@Departments.Description</td>
                    <td>@Departments.DateOfCreation</td>
                    <td> <a class="btn btn-primary" asp-action="Details" asp-route-Id="@Departments.Id"> <i class="fas fa-eye"> </i>Details</a> </td>
                    <td> <a class="btn btn-success" asp-action="Update" asp-route-Id="@Departments.Id"> <i class="fas fa-edit"> </i>Update</a></td>
                    <td> <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@Departments.Id"> <i class="fas fa-trash"></i> Delete</a></td>
                </tr>
         }
        </tbody>
    </table>
}
else
{
  <div class="alert alert-info mt-2">
      <h2>No Departments Found !!</h2>
  </div>
}
